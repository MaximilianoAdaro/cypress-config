{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "inlineSources": true,
    "outDir": "dist",
    "paths": {
      "@custom/cypress-commands": [
        "libs/cypress-commands/src/index.ts"
      ],
      "@custom/cypress-runner": [
        "libs/cypress-runner/src/index.ts"
      ]
    }
  },
  "lib": [
    "es2015"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
